store.prim.sh {
    import security_headers
    log {
        output file /var/log/caddy/store-access.log
        format json
    }
    request_body {
        max_size 128MB
    }
    handle /install.sh {
        root * /opt/prim/packages/store
        file_server
    }
    handle {
        reverse_proxy localhost:3002
    }
}
