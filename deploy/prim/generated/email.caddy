email.prim.sh {
    import security_headers
    request_body {
        max_size 25MB
    }
    handle /install.sh {
        root * /opt/prim/packages/email
        file_server
    }
    handle {
        reverse_proxy localhost:3006
    }
}

mail.prim.sh {
    import security_headers
    request_body { max_size 25MB }
    reverse_proxy localhost:8080
}
